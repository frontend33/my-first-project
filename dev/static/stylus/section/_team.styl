.team
  padding 0
  background: url('../img/general/team-bg.png') 0 0 no-repeat
  background-size cover

  &:before
    content ''
    display block
    position absolute
    top -20px
    left 0
    right 0
    height 21px
    width 100%
    background url('../img/general/wave-top-team.png')0 0 no-repeat
    z-index 1

  &:after
    content ''
    display block
    position absolute
    bottom -20px
    left 0
    right 0
    height 21px
    background url('../img/general/wave-bottom-team.png')0 0 no-repeat
    z-index 1

.team-content
  background url('../img/general/team-line.png')center no-repeat
  height: 1140px
  padding 70px
