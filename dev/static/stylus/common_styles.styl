.sandwich
  position relative
  width 50px
  height 50px
  border 2px solid #fff
  border-radius 50px
  display inline-block
  vertical-align middle
  margin-right 15px
  &.active
    .sandwich-line--top
      top 21px
      transform rotate(45deg)

    .sandwich-line--middle
      opacity 0

    .sandwich-line-bottom
      top 21px
      transform rotate(-45deg)

.sandwich-line
  position absolute
  left 50%
  margin-left -12.5px
  display block
  width 25px
  height 4px
  background-color #fff
  transition all linear .5s

.sandwich-line--top
  top 13px

.sandwich-line--middle
  top 21px
  opacity 1

.sandwich-line-bottom
  top 29px

.g-btn
  display inline-block
  height 30px
  line-height 28px
  padding 0 20px
  border 1px solid #fff
  border-radius 20px
  color #fff
  background-color mainColor
  cursor pointer
  transition all linear.3s

  &:hover
    background-color #fff
    color mainColor
.header-nav_list
  position absolute
  top 80px
  z-index 1
  display none
  background-color #fff

.header-nav_link
  display block
  color mainColor
  padding 17px 17px 19px 21px
  border-bottom 1px solid mainColor
  transition all linear 0.2s

  &:hover
    background-color mainColor
    color #fff

.g-section-title
  text-align center
  font-size 42px
  font-family titleFont
  color mainColor
  margin-bottom 30px

  &.g-section-title--white
    color #fff

.instagram-text
  display inline-block
  position relative
  font-size 24px
  font-family boldFont
  color mainColor

  &:before
    content ''
    display inline-block
    vertical-align middle
    margin-right 15 px
    width 35px
    height 35px
    background url('../img/svg/instagram-color.svg') 0 0 no-repeat

svg.icon-instagram-color
  content ''
  vertical-align middle
  width 35px
  height 35px
  background url('../img/svg/instagram-color.svg') 0 0 no-repeat